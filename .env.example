# ECCC Hudson Bay Lowlands - Environment Variables
# Copy this file to .env and customize values as needed.
#
# See docs/ENVIRONMENT_VARIABLES.md for full documentation.

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL host (use 'eccc-db' when running with Docker Compose)
DB_HOST=localhost

# PostgreSQL port
DB_PORT=5432

# PostgreSQL username
DB_USERNAME=eccc

# PostgreSQL password (change in production!)
DB_PASSWORD=eccc

# PostgreSQL database name
DB_NAME=eccc_db

# =============================================================================
# API Configuration
# =============================================================================

# Secret token for authenticating POST /seed requests (required, no default)
SEED_SECRET=change-me-in-production

# S3 bucket name for COG tile serving
S3_BUCKET_NAME=

# FastAPI root path for reverse proxy (leave empty for local dev, set to /api in production)
ROOT_PATH=

# Set to 'true' to use test database (eccc_db_test)
TESTING=false

# =============================================================================
# AWS / S3 Configuration
# =============================================================================

# AWS region (default: ca-central-1, used by GDAL for S3 access)
AWS_REGION=ca-central-1

# AWS credentials for local development (leave empty in production â€” uses instance profile)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=

# =============================================================================
# Client Configuration (build-time)
# =============================================================================
# NEXT_PUBLIC_* variables are embedded into the client JavaScript bundle at
# build time. Changing them requires rebuilding the client image.

# API base URL used by the client
NEXT_PUBLIC_API_URL=http://localhost:8000

# Mapbox GL JS API token for map rendering (optional for local dev)
NEXT_PUBLIC_MAPBOX_API_TOKEN=

# =============================================================================
# Client Configuration (runtime, server-side only)
# =============================================================================

# Base URL for NextAuth.js callbacks
NEXTAUTH_URL=http://localhost:3000

# Secret for signing NextAuth.js tokens (change in production!)
NEXTAUTH_SECRET=dev-secret-change-in-production
