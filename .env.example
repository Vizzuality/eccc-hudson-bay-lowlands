# ECCC Hudson Bay Lowlands - Environment Variables
# Copy this file to .env and customize values as needed

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL host (use 'eccc-db' when running with Docker Compose)
DATABASE_HOST=localhost

# PostgreSQL port
DATABASE_PORT=5432

# PostgreSQL username
DATABASE_USERNAME=eccc

# PostgreSQL password (change in production!)
DATABASE_PASSWORD=eccc

# PostgreSQL database name
DATABASE_NAME=eccc_db

# =============================================================================
# Testing Configuration
# =============================================================================

# Set to 'true' to use test database (eccc_db_test)
TESTING=false

# =============================================================================
# API Configuration (optional - defaults shown)
# =============================================================================

# API metadata
# TITLE="ECCC Hudson Bay Lowlands API"
# DESCRIPTION="Backend API for Hudson Bay Lowlands geospatial application"
# VERSION="0.1.0"

# Contact information
# CONTACT_NAME="ECCC Hudson Bay Lowlands Team"
# CONTACT_URL="https://github.com/eccc-hudson-bay-lowlands"
# CONTACT_EMAIL="contact@example.com"

# CORS settings (comma-separated for multiple origins)
# CORS_ORIGINS=["*"]
# CORS_ALLOW_CREDENTIALS=true
# CORS_ALLOW_METHODS=["*"]
# CORS_ALLOW_HEADERS=["*"]
